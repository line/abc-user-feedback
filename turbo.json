{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "next-env.d.ts", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "web#dev": {
      "dependsOn": ["@ufb/tailwind#build", "@ufb/shared#build"]
    },
    "api#dev": {
      "dependsOn": ["@ufb/shared#build"]
    },
    "format": {
      "outputs": ["node_modules/.cache/.prettiercache"],
      "outputLogs": "new-only"
    },
    "@ufb/tailwind#build": {
      "outputs": ["dist/**"]
    },
    "@ufb/shared#build": {
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^topo", "^build"],
      "outputs": ["node_modules/.cache/.eslintcache"]
    },
    "typecheck": {
      "dependsOn": ["^topo", "^build"],
      "outputs": ["node_modules/.cache/tsbuildinfo.json"]
    },
    "test": {
      "dependsOn": ["^topo", "^build"]
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    }
  },
  "globalDependencies": ["**/.env"],
  "globalEnv": [
    "NODE_ENV",
    "SESSION_PASSWORD",
    "API_BASE_URL",
    "NEXT_PUBLIC_API_BASE_URL",
    "OPENSEARCH_USE",
    "OPENSEARCH_NODE",
    "OPENSEARCH_USERNAME",
    "OPENSEARCH_PASSWORD",
    "APP_PORT",
    "APP_ADDRESS",
    "JWT_SECRET",
    "MYSQL_PRIMARY_URL",
    "MYSQL_SECONDARY_URLS",
    "SMTP_USE",
    "SMTP_HOST",
    "SMTP_PORT",
    "SMTP_USERNAME",
    "SMTP_PASSWORD",
    "SMTP_SENDER",
    "SMTP_BASE_URL",
    "AUTO_MIGRATION",
    "MASTER_API_KEY",
    "BASE_URL",
    "NEXT_PUBLIC_MAX_DAYS",
    "SKIP_ENV_VALIDATION",
    "PORT"
  ],
  "globalPassThroughEnv": ["NODE_ENV", "CI", "npm_lifecycle_event"]
}
